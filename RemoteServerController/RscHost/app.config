<?xml version="1.0"?>
<configuration>
  <configSections>
    <!-- Do not touch these sections! -->
    <section name="Configurator" type="RscConfig.Configurator, RscConfig" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  
  <!-- Remote Server Controller configuration -->
  
  <Configurator>
    <GeneralSettings
      QuitToken="quit"/>
    <Network
      Host="localhost"
      Port="55011"
      UseSSL="true"
      CertificateThumbprint="da e9 0b e5 fc 22 38 7c 77 be 43 0a 77 41 5f 85 7e 26 41 27"
      CrossDomainScriptAccessEnabled="true"/>
    <Services
      StatusChangeTimeout="5000">
      <AllowedServiceCollection>
        <!-- NOTE: AllowStatusCheck is always true if you allow Start or Stop. -->
        <add Name="hpsrv" AllowStart="true" AllowStop="true" AllowStatusCheck="true"/>
        <add Name="Fax" AllowStart="true" AllowStop="true" AllowStatusCheck="true"/>
        <add Name="SkypeUpdate" AllowStart="true" AllowStop="true" AllowStatusCheck="true"/>
      </AllowedServiceCollection>
    </Services>
  </Configurator>
  
  <!-- Logger configuration -->
  
  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level >>> %message%exception%newline"/>
      </layout>
    </appender>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="RollingFileAppender"/>
    </root>
  </log4net>
</configuration>
