<?xml version="1.0"?>
<configuration>
  <configSections>
    <!-- Do not touch these sections! -->
    <section name="StaticConfiguration" type="RscConfig.StaticConfiguration, RscConfig" />
    <section name="DynamicConfiguration" type="RscConfig.DynamicConfiguration, RscConfig" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  
  <!-- Remote Server Controller configuration -->

  <StaticConfiguration>
    <!-- INFO: Static configuration is read only at program start. Cannot be modified at runtime. -->
    <!-- FYI: Moving the config to DynamicConfiguration will not make it dynamic - it will just not work at all :) -->
    <GeneralSettings
      QuitToken="quit"/>
    <Network
      Host="localhost"
      Port="55011"
      UseSSL="false"
      CertificateThumbprint="da e9 0b e5 fc 22 38 7c 77 be 43 0a 77 41 5f 85 7e 26 41 27"
      CrossDomainScriptAccessEnabled="true"/>
  </StaticConfiguration>
  
  <DynamicConfiguration>
    <!-- INFO & WARNING: All changes in section DynamicConfiguration are applied immediately when file is saved (no service restart required)! -->
    <Services
      StatusChangeTimeout="5000">
      <AllowedServiceCollection>
        <!-- NOTE: AllowStatusCheck is always true if you allow Start or Stop. -->
        <add Name="UmRdpService" AllowStart="true" AllowStop="true" AllowStatusCheck="true"/>
        <add Name="Fax" AllowStart="true" AllowStop="true" AllowStatusCheck="true"/>
        <add Name="SkypeUpdate" AllowStart="true" AllowStop="true" AllowStatusCheck="true"/>
      </AllowedServiceCollection>
    </Services>
    <Security
      CheckAPIKey="true"
      CheckIPAddress="false">
      <AllowedAPIKeyCollection>
        <add Value="e9ccb9b26dab2e0da89331b5186dda5e"/>
      </AllowedAPIKeyCollection>
      <AllowedIPAddressCollection>
        <add Value=""/>
      </AllowedIPAddressCollection>
    </Security>
  </DynamicConfiguration>
  
  <!-- Logger configuration -->
  
  <log4net>
    <appender name="LogAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level >>> %message%exception%newline"/>
      </layout>
    </appender>
    <appender name="AuditAppender" type="log4net.Appender.RollingFileAppender">
      <file value="audit.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level >>> %message%exception%newline"/>
      </layout>
    </appender>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="LogAppender"/>
    </root>
    <logger name="AuditAppender">
      <level value="DEBUG"/>
      <appender-ref ref="AuditAppender"/>
    </logger>
  </log4net>
</configuration>
